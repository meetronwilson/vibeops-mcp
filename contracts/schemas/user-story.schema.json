{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "user-story.schema.json",
  "title": "User Story",
  "description": "A user story with acceptance criteria, DoD, and DoR",
  "type": "object",
  "required": ["id", "title", "description", "featureId", "status", "acceptanceCriteria", "definitionOfDone", "metadata"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the user story (e.g., MOD-001-FEAT-001-STORY-001)",
      "pattern": "^MOD-[0-9]{3}-FEAT-[0-9]{3}-STORY-[0-9]{3}$"
    },
    "title": {
      "type": "string",
      "description": "Title of the user story",
      "minLength": 5,
      "maxLength": 200
    },
    "description": {
      "type": "string",
      "description": "As a [user], I want [goal], so that [benefit]",
      "minLength": 20
    },
    "featureId": {
      "type": "string",
      "description": "Parent feature ID (e.g., MOD-001-FEAT-001)",
      "pattern": "^MOD-[0-9]{3}-FEAT-[0-9]{3}$"
    },
    "status": {
      "type": "string",
      "enum": ["backlog", "ready", "in-progress", "in-review", "done", "blocked"],
      "description": "Current status of the user story"
    },
    "acceptanceCriteria": {
      "type": "array",
      "description": "List of acceptance criteria that must be met",
      "items": {
        "type": "object",
        "required": ["criterion", "verified"],
        "properties": {
          "criterion": {
            "type": "string",
            "description": "Given [context], when [action], then [outcome]"
          },
          "verified": {
            "type": "boolean",
            "description": "Whether this criterion has been verified"
          }
        }
      },
      "minItems": 1
    },
    "definitionOfDone": {
      "type": "array",
      "description": "Checklist of items that must be completed",
      "items": {
        "type": "object",
        "required": ["item", "completed"],
        "properties": {
          "item": {
            "type": "string"
          },
          "completed": {
            "type": "boolean"
          }
        }
      },
      "minItems": 1
    },
    "definitionOfReady": {
      "type": "array",
      "description": "Checklist of items required before work can start",
      "items": {
        "type": "object",
        "required": ["item", "ready"],
        "properties": {
          "item": {
            "type": "string"
          },
          "ready": {
            "type": "boolean"
          }
        }
      },
      "minItems": 1
    },
    "assignee": {
      "type": "string",
      "description": "Person assigned to the story"
    },
    "storyPoints": {
      "type": "number",
      "description": "Effort estimation in story points",
      "minimum": 0
    },
    "priority": {
      "type": "string",
      "enum": ["critical", "high", "medium", "low"]
    },
    "testing": {
      "type": "object",
      "description": "Testing requirements and status for AI-driven development",
      "properties": {
        "unit": {
          "type": "object",
          "properties": {
            "required": {
              "type": "boolean",
              "description": "Whether unit tests are required"
            },
            "coverage": {
              "type": "number",
              "description": "Target coverage percentage",
              "minimum": 0,
              "maximum": 100
            },
            "status": {
              "type": "string",
              "enum": ["not-started", "in-progress", "passing", "failing"],
              "description": "Current status of unit tests"
            }
          }
        },
        "integration": {
          "type": "object",
          "properties": {
            "required": {
              "type": "boolean",
              "description": "Whether integration tests are required"
            },
            "status": {
              "type": "string",
              "enum": ["not-started", "in-progress", "passing", "failing"],
              "description": "Current status of integration tests"
            }
          }
        },
        "e2e": {
          "type": "object",
          "properties": {
            "required": {
              "type": "boolean",
              "description": "Whether end-to-end tests are required"
            },
            "status": {
              "type": "string",
              "enum": ["not-started", "in-progress", "passing", "failing"],
              "description": "Current status of e2e tests"
            }
          }
        },
        "performance": {
          "type": "object",
          "properties": {
            "required": {
              "type": "boolean",
              "description": "Whether performance tests are required"
            },
            "benchmarks": {
              "type": "array",
              "description": "Performance benchmarks that must be met",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "required": ["createdAt", "updatedAt"],
      "properties": {
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        },
        "createdBy": {
          "type": "string"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
